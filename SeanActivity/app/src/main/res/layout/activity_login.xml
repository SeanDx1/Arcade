<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/ic_homelogo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/textView_login_head"
            android:layout_width="450dp"
            android:layout_height="180dp"
            android:src="@drawable/arcade_logo"

            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


        <TextView
            android:id="@+id/textView_login_email"
            android:layout_width="266dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textView_login_head"
            android:layout_marginStart="90dp"
            android:layout_marginTop="45dp"

            android:background="@drawable/rounded_corner_right"
            android:gravity="center"
            android:text="Email*"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView_email_logo"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:layout_height="35dp"
            android:layout_above="@+id/editText_login_email"
            android:background="@drawable/rounded_corner_right" />

        <EditText
            android:id="@+id/editText_login_email"
            android:layout_width="317dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:layout_below="@+id/textView_login_email"
            android:layout_marginTop="-1dp"
            android:background="@drawable/border"

            android:hint="Enter Email"
            android:layout_marginStart="40dp"

            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_login_pwd"
            android:layout_width="269dp"
            android:layout_height="39dp"

            android:layout_below="@+id/textView_login_email"
            android:layout_marginStart="90dp"
            android:layout_marginTop="78dp"

            android:background="@drawable/rounded_corner_right"
            android:gravity="center"
            android:text="Password*"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView_pwd_logo"
            android:layout_width="79dp"
            android:layout_marginStart="40dp"
            android:layout_height="39dp"

            android:layout_above="@+id/editText_login_pwd"
            android:background="@drawable/rounded_corner_right" />

        <ImageView
            android:id="@+id/imageView_shot_hide_pwd"
            android:layout_width="30dp"
            android:layout_height="32dp"

            android:layout_below="@id/textView_login_pwd"
            android:layout_marginStart="365dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editText_login_pwd"
            android:layout_width="319dp"
            android:gravity="center"
            android:layout_height="48dp"
            android:layout_below="@+id/textView_login_pwd"
            android:layout_marginTop="-1dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/border"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="6dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_login_pwd"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="70dp"
            android:backgroundTint="#ff00ca"
            android:text="Login" />

        <Button
            android:id="@+id/button_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_login"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:backgroundTint="#ff00ca"
            android:text="Forgot Password?" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_login"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="70dp"
            android:backgroundTint="#ff00ca"
            android:text="Register" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>