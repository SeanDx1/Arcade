<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_homelogo"
    tools:context=".TicTacToeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/playerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:text="@string/player_one"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/playerOneScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerOne"
            android:layout_marginTop="5dp"
            android:layout_marginStart="55dp"
            android:text="@string/_0"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/playerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="300dp"
            android:text="@string/player_two"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/playerTwoScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerTwo"
            android:layout_marginTop="5dp"
            android:layout_marginStart="350dp"
            android:text="@string/_0"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/playerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerOneScore"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/playerStatus"
            android:layout_marginTop="15dp"
            android:layout_marginStart="12dp"
            android:backgroundTint="#413F43"

            android:textColor="#ffffff"
            android:textSize="60sp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="140dp"
            android:layout_below="@+id/playerStatus"
            android:layout_marginTop="15dp"
            android:backgroundTint="#413F43"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold"


            />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="270dp"
            android:layout_below="@+id/playerStatus"
            android:layout_marginTop="15dp"
            android:backgroundTint="#413F43"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/btn_0"
            android:layout_marginTop="2dp"
            android:backgroundTint="#413F43"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="140dp"
            android:layout_below="@+id/btn_1"
            android:layout_marginTop="2dp"
            android:backgroundTint="#413F43"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="270dp"
            android:layout_below="@+id/btn_2"
            android:layout_marginTop="2dp"
            android:backgroundTint="#413F43"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/btn_3"
            android:layout_marginTop="2dp"
            android:backgroundTint="#413F43"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="140dp"
            android:layout_below="@+id/btn_4"
            android:layout_marginTop="2dp"
            android:backgroundTint="#413F43"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="270dp"
            android:layout_below="@+id/btn_5"
            android:layout_marginTop="2dp"
            android:backgroundTint="#413F43"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/resetGame"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/btn_6"
            android:layout_marginTop="50dp"
            android:backgroundTint="#ff00ca"
            android:text="@string/reset_game"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>
</ScrollView>